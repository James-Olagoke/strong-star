---
import '../styles/global.css';
const { title = 'Site' } = Astro.props;
---

<html lang="en" class="bg-zinc-950">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body class="text-zinc-100 selection:bg-indigo-400/20">
    <!-- subtle radial background -->
    <div class="fixed inset-0 -z-10 bg-grid-radial opacity-40"></div>

    <!-- glassy dark nav -->
    <header class="sticky top-0 z-50 border-b border-white/10 bg-zinc-950/70 backdrop-blur">
      <nav class="container-grid py-3 flex items-center gap-6">
        <a href="/" class="font-bold text-lg">James<span class="text-indigo-400">.astro</span></a>
        <div class="ml-auto flex items-center gap-5 text-sm">
          <a href="/" class="hover:text-indigo-300">Home</a>
          <a href="/about" class="hover:text-indigo-300">About</a>
          <a href="/projects" class="hover:text-indigo-300">Projects</a>
          <a href="/blog" class="hover:text-indigo-300">Blog</a>
          <a href="/contact" class="hover:text-indigo-300">Contact</a>
        </div>
      </nav>
    </header>

    <main class="container-grid py-10 md:py-14">
      <slot />
    </main>
    <footer class="mt-10 border-t border-white/10">
      <div class="container-grid py-10 grid grid-cols-1 sm:grid-cols-3 gap-8">
        <div>
          <h3 class="font-semibold text-white">About</h3>
          <p class="mt-2 text-zinc-400">
            I build fast, accessible, content-first sites with Astro and Tailwind.
          </p>
        </div>
        <div>
          <h3 class="font-semibold text-white">Navigation</h3>
          <ul class="mt-2 space-y-1 text-zinc-400">
            <li><a class="hover:text-indigo-300" href="/">Home</a></li>
            <li><a class="hover:text-indigo-300" href="/about">About</a></li>
            <li><a class="hover:text-indigo-300" href="/projects">Projects</a></li>
            <li><a class="hover:text-indigo-300" href="/blog">Blog</a></li>
            <li><a class="hover:text-indigo-300" href="/contact">Contact</a></li>
          </ul>
        </div>
        <div>
          <h3 class="font-semibold text-white">Tech</h3>
          <div class="mt-2 flex flex-wrap gap-2">
            <span class="badge">Astro</span>
            <span class="badge">Tailwind</span>
            <span class="badge">Vercel</span>
            <span class="badge">Markdown</span>
          </div>
        </div>
      </div>
      <div class="border-t border-white/10">
        <div class="container-grid py-4 text-sm text-zinc-500 flex items-center justify-between">
          <span>© {new Date().getFullYear()} James • All rights reserved.</span>
          <span class="flex items-center gap-3">
            <a href="https://github.com/James-Olagoke/strong-star" target="_blank" rel="noreferrer" class="hover:text-indigo-300">GitHub</a>
            <a href="https://vercel.com" target="_blank" rel="noreferrer" class="hover:text-indigo-300">Vercel</a>
          </span>
        </div>
      </div>
    </footer>

    <!-- simple scroll-reveal -->
    <script is:inline>
      const els = document.querySelectorAll('[data-animate]');
      const obs = new IntersectionObserver((entries) => {
        for (const e of entries) {
          if (e.isIntersecting) {
            e.target.classList.add('animate-fade-up');
            obs.unobserve(e.target);
          }
        }
      }, { threshold: 0.15 });
      els.forEach(el => {
        el.classList.add('opacity-0','translate-y-3','will-change-transform');
        obs.observe(el);
      });
    </script>
  </body>
</html>
