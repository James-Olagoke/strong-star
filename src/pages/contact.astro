---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Contact">
  <h1 class="text-3xl font-bold text-white mb-4" data-animate>Contact</h1>
  <form class="space-y-4 max-w-lg" data-animate>
    <input type="text" placeholder="Your name" class="w-full border border-white/10 bg-zinc-950/70 rounded px-4 py-2 text-zinc-100" />
    <input type="email" placeholder="Email" class="w-full border border-white/10 bg-zinc-950/70 rounded px-4 py-2 text-zinc-100" />
    <textarea placeholder="Message" class="w-full border border-white/10 bg-zinc-950/70 rounded px-4 py-2 h-32 text-zinc-100"></textarea>
    <button class="btn-primary">Send</button>
  </form>
</Layout>
