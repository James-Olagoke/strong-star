---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact">
  <section class="space-y-6">
    <h1 class="text-3xl font-bold">Contact James</h1>
    <p class="text-gray-700">Use the form below (static for now):</p>

    <form class="space-y-4 max-w-lg">
      <input type="text" placeholder="Your name" class="w-full border rounded px-4 py-2" />
      <input type="email" placeholder="Email" class="w-full border rounded px-4 py-2" />
      <textarea placeholder="Message" class="w-full border rounded px-4 py-2 h-32"></textarea>
      <button class="bg-indigo-600 text-white px-5 py-2.5 rounded hover:bg-indigo-500">
        Send
      </button>
    </form>
  </section>
</Layout>
