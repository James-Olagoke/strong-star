---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Home">
  <!-- HERO with optional photo -->
  <section class="relative overflow-hidden rounded-2xl text-white px-6 py-16 md:px-12 md:py-20">
    <div class="absolute inset-0 -z-10">
      {Astro.site && <img src="/images/hero.jpg" alt="" class="hidden md:block h-full w-full object-cover opacity-30" loading="lazy" />}
      <div class="md:hidden h-full w-full bg-gradient-to-br from-indigo-700 via-indigo-600 to-fuchsia-700"></div>
    </div>

    <div class="max-w-3xl" data-animate>
      <p class="uppercase tracking-widest text-white/80 text-xs mb-3">Astro â€¢ Tailwind â€¢ Git</p>
      <h1 class="text-4xl md:text-6xl font-extrabold leading-tight">
        Welcome to <span class="text-white">Jamesâ€™s</span> modern web studio ğŸš€
      </h1>
      <p class="mt-4 md:text-lg text-white/90">
        Fast, accessible, content-first sites. Clean components, strong contrast, and professional workflow.
      </p>
      <div class="mt-8 flex flex-col sm:flex-row gap-3">
        <a href="/projects" class="btn-primary">Explore Projects</a>
        <a href="/blog" class="btn-secondary">Read the Blog</a>
      </div>
    </div>
  </section>

  <!-- LOGOS / TRUST (simple placeholders) -->
  <section class="mt-10 md:mt-14">
    <div class="card card-surface" data-animate>
      <p class="text-center text-zinc-400 text-sm">Tools I use daily</p>
      <div class="mt-4 grid grid-cols-2 sm:grid-cols-4 gap-6 opacity-90">
        <div class="h-10 rounded-lg bg-white/5 shimmer"></div>
        <div class="h-10 rounded-lg bg-white/5 shimmer"></div>
        <div class="h-10 rounded-lg bg-white/5 shimmer"></div>
        <div class="h-10 rounded-lg bg-white/5 shimmer"></div>
      </div>
    </div>
  </section>

  <!-- FEATURED WORK PREVIEW -->
  <section class="mt-12 md:mt-16">
    <div class="flex items-end justify-between">
      <h2 class="text-2xl md:text-3xl font-bold text-white">Featured Work</h2>
      <a href="/projects" class="text-indigo-300 hover:underline">See all â†’</a>
    </div>

    <div class="mt-6 grid grid-cols-1 md:grid-cols-3 gap-6">
      {['work-1','work-2','work-3'].map((n) => (
        <a href="/projects" class="card card-surface tilt group" data-animate>
          <div class="relative -mx-6 -mt-6 mb-4 aspect-[16/10] overflow-hidden rounded-t-xl">
            <img src={`/images/${n}.jpg`} alt="" class="h-full w-full object-cover transition duration-300 group-hover:scale-[1.03]" loading="lazy" />
            <div class="absolute inset-0 ring-1 ring-inset ring-white/10"></div>
          </div>
          <h3 class="text-lg font-semibold text-white">High-performance Landing</h3>
          <p class="mt-1 text-zinc-400">Gradient hero, a11y, clean sections.</p>
          <div class="mt-3 flex gap-2">
            <span class="badge">Astro</span>
            <span class="badge">Tailwind</span>
          </div>
        </a>
      ))}
    </div>
  </section>

  <!-- TESTIMONIAL BAND -->
  <section class="mt-12 md:mt-16 card card-surface" data-animate>
    <div class="grid md:grid-cols-3 gap-6">
      <blockquote class="text-zinc-300">â€œPages load instantly. Great attention to accessibility.â€ <div class="mt-2 text-sm text-zinc-500">â€” Client A</div></blockquote>
      <blockquote class="text-zinc-300">â€œClean components. Easy for our team to extend.â€ <div class="mt-2 text-sm text-zinc-500">â€” Client B</div></blockquote>
      <blockquote class="text-zinc-300">â€œProfessional Git workflow and reviews.â€ <div class="mt-2 text-sm text-zinc-500">â€” Client C</div></blockquote>
    </div>
  </section>

  <!-- CTA -->
  <section class="mt-12 md:mt-16 rounded-2xl border border-white/10 bg-zinc-900/60 p-8 md:p-12 flex flex-col md:flex-row items-start md:items-center justify-between gap-6" data-animate>
    <div>
      <h2 class="text-2xl md:text-3xl font-bold text-white">Letâ€™s build something exceptional.</h2>
      <p class="text-zinc-400 mt-1">From concept to production â€” fast, accessible, beautiful.</p>
    </div>
    <a href="/contact" class="btn-primary">Get in Touch â†’</a>
  </section>

  <!-- tiny tilt effect -->
  <script is:inline>
    document.querySelectorAll('.tilt').forEach((card) => {
      card.addEventListener('mousemove', (e) => {
        const r = card.getBoundingClientRect();
        const x = e.clientX - r.left, y = e.clientY - r.top;
        const rx = ((y / r.height) - 0.5) * -6;
        const ry = ((x / r.width) - 0.5) *  6;
        card.style.transform = `rotateX(${rx}deg) rotateY(${ry}deg)`;
      });
      card.addEventListener('mouseleave', () => card.style.transform = 'rotateX(0) rotateY(0)');
    });
  </script>
</Layout>
