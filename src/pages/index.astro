---
import Layout from '../layouts/Layout.astro';

const tools = [
  {
    name: 'Astro',
    emoji: '⚡',
    blurb:
      'Content-first framework with zero-JS by default and great performance.',
    link: 'https://astro.build',
  },
  {
    name: 'Tailwind CSS',
    emoji: '🎨',
    blurb:
      'Utility-first styling for fast iteration, dark-mode tokens, and consistency.',
    link: 'https://tailwindcss.com',
  },
  {
    name: 'Git & GitHub',
    emoji: '🐙',
    blurb:
      'Feature branches, PR reviews, clean commit history, and CI deploys.',
    link: 'https://github.com',
  },
  {
    name: 'Vercel',
    emoji: '🚀',
    blurb:
      'Automated builds on push, preview URLs for PRs, and global edge hosting.',
    link: 'https://vercel.com',
  },
  {
    name: 'Markdown',
    emoji: '📝',
    blurb:
      'Write posts in .md files with frontmatter, organized with collections.',
    link: 'https://www.markdownguide.org/',
  },
  {
    name: 'Accessibility',
    emoji: '♿',
    blurb:
      'Readable contrast, keyboard navigation, and semantic HTML by default.',
    link: 'https://www.w3.org/WAI/standards-guidelines/wcag/',
  },
];
---

<Layout title="Home">
  <!-- HERO with your image -->
  <section class="relative overflow-hidden rounded-2xl text-white px-6 py-16 md:px-12 md:py-20">
    <div class="absolute inset-0 -z-10">
      <img src="/images/hero.jpg" alt="" class="h-full w-full object-cover opacity-30" loading="lazy" />
      <div class="absolute inset-0 bg-gradient-to-br from-indigo-700/40 via-transparent to-fuchsia-700/30"></div>
    </div>

    <div class="max-w-3xl" data-animate>
      <p class="uppercase tracking-widest text-white/80 text-xs mb-3">Astro • Tailwind • Git</p>
      <h1 class="text-4xl md:text-6xl font-extrabold leading-tight">
        Welcome to <span class="text-white">James’s</span> modern web studio 🚀
      </h1>
      <p class="mt-4 md:text-lg text-white/90">
        Fast, accessible, content-first sites. Clean components, strong contrast, and a professional workflow.
      </p>
      <div class="mt-8 flex flex-col sm:flex-row gap-3">
        <a href="/projects" class="btn-primary">Explore Projects</a>
        <a href="/blog" class="btn-secondary">Read the Blog</a>
      </div>
    </div>
  </section>

  <!-- TOOLS I USE (detailed) -->
  <section class="mt-12 md:mt-16" data-animate>
    <div class="flex items-end justify-between">
      <h2 class="text-2xl md:text-3xl font-bold text-white">Tools I Use</h2>
      <span class="text-sm text-zinc-500">A focused stack I use every day</span>
    </div>

    <div class="mt-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {tools.map((t) => (
        <a href={t.link} target="_blank" rel="noreferrer"
           class="card card-surface border border-white/10 hover:border-indigo-500/40 group">
          <div class="flex items-start gap-3">
            <div class="text-2xl">{t.emoji}</div>
            <div>
              <h3 class="text-lg font-semibold text-white group-hover:text-indigo-200 transition">
                {t.name}
              </h3>
              <p class="mt-1 text-zinc-400">{t.blurb}</p>
              <span class="mt-3 inline-flex items-center gap-1 text-indigo-300 text-sm">
                Learn more →
              </span>
            </div>
          </div>
        </a>
      ))}
    </div>
  </section>

  <!-- FEATURED WORK PREVIEW -->
  <section class="mt-12 md:mt-16">
    <div class="flex items-end justify-between">
      <h2 class="text-2xl md:text-3xl font-bold text-white">Featured Work</h2>
      <a href="/projects" class="text-indigo-300 hover:underline">See all →</a>
    </div>

    <div class="mt-6 grid grid-cols-1 md:grid-cols-3 gap-6">
      {['work-1','work-2','work-3'].map((n) => (
        <a href="/projects" class="card card-surface group">
          <div class="relative -mx-6 -mt-6 mb-4 aspect-[16/10] overflow-hidden rounded-t-xl">
            <img src={`/images/${n}.jpg`} alt="" class="h-full w-full object-cover transition duration-300 group-hover:scale-[1.03]" loading="lazy" />
            <div class="absolute inset-0 ring-1 ring-inset ring-white/10"></div>
          </div>
          <h3 class="text-lg font-semibold text-white">High-performance Landing</h3>
          <p class="mt-1 text-zinc-400">Gradient hero, a11y, clean sections.</p>
          <div class="mt-3 flex gap-2">
            <span class="badge">Astro</span>
            <span class="badge">Tailwind</span>
          </div>
        </a>
      ))}
    </div>
  </section>

  <!-- TESTIMONIAL BAND -->
  <section class="mt-12 md:mt-16 card card-surface" data-animate>
    <div class="grid md:grid-cols-3 gap-6">
      <blockquote class="text-zinc-300">“Pages load instantly. Great attention to accessibility.” <div class="mt-2 text-sm text-zinc-500">— Client A</div></blockquote>
      <blockquote class="text-zinc-300">“Clean components. Easy for our team to extend.” <div class="mt-2 text-sm text-zinc-500">— Client B</div></blockquote>
      <blockquote class="text-zinc-300">“Professional Git workflow and reviews.” <div class="mt-2 text-sm text-zinc-500">— Client C</div></blockquote>
    </div>
  </section>

  <!-- CTA -->
  <section class="mt-12 md:mt-16 rounded-2xl border border-white/10 bg-zinc-900/60 p-8 md:p-12 flex flex-col md:flex-row items-start md:items-center justify-between gap-6" data-animate>
    <div>
      <h2 class="text-2xl md:text-3xl font-bold text-white">Let’s build something exceptional.</h2>
      <p class="text-zinc-400 mt-1">From concept to production — fast, accessible, beautiful.</p>
    </div>
    <a href="/contact" class="btn-primary">Get in Touch →</a>
  </section>
</Layout>
